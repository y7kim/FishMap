<%= div_for product do %>
	<h3>
		<%= link_to product.title, product %>
		<% if product.owned_by? current_user %>
			<span class='actions'>
				<%= link_to "Edit", edit_product_path(product) %>
				<%= link_to "Delete", product, confirm: "Are you sure?", method: :delete %>
			</span>
		<% end %>
	</h3>
	<%= simple_format product.description %>
	
<% end %>