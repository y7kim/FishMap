<section id="login">
  <div class="container">
      <div class="row itembg">
          <div class="col-lg-12 ">
              <h1 class="section-heading">Login</h1>
              <h3 class="section-subheading text-info">..and start logging your fish!</h3>
          </div>
      </div>
      <div class="row text-center itembg">
          <div class="col-md-12">
            <%= form_tag session_path do %>
				<div class="field">
					<%= label_tag :email, "Email", :class => 'btn-success' %><br />
					<%= text_field_tag :email %>
				</div>
				<div class="field">
					<%= label_tag :password, "Password", :class => 'btn-success'  %><br />
					<%= password_field_tag :password %>
				</div>
				<div class="actions">
					<%= submit_tag 'Login', :class => 'btn btn-primary pull-right' %>
				</div>
			<% end %>
          </div>
          <div class="col-md-6">
          </div>
      </div>
  </div>
</section>