<section id="worldfish">
  <div class="container">
    <% if session[:user_id] %>
      <div class="row itembg">
          <div class="col-lg-12 ">
              <h1 class="section-heading">Recent Catches Worldwide</h1>
              <h3 class="section-subheading text-info">(in the last week)</h3>
          </div>
      </div>
      <div class="row text-center itembg">
          <div class="col-md-12">
            <div id="map"></div>
          </div>
      </div> 
    <% else %>
      <div class="row itembg">
          <div class="col-lg-12 ">
              <h1 class="section-heading">Recent Catches Worldwide</h1>
              <h3 class="section-subheading text-info">(in the last week)</h3>
          </div>
      </div>
      <div class="row text-center itembg">
          <div class="col-md-6">
            <div id="map"></div>
          </div>
          <div class="col-md-6">
            <div class="panel panel-success">
              <div class="panel-heading">
                <span class="text sub pull-left">Release the fish!</span>
              </div>
              <span class="text-success sub"> Keep the memories!</span>
              <div class="panel-body">             
                   <img src="http://imgur.com/nDdKmmu.jpg" style="max-width:250px;" /><br />  
                   <p>
                  FishMap lets you keep track of all your catches and organize them.
                  </p>
                  <a href="<%= new_user_path %>" class="btn btn-lg btn-success">Register</a> 
              </div>
           </div>
              
              
            </div>
          </div>
      </div>
      
    <% end %>
  </div>
</section>

<script type="text/javascript">
  var toggle = 0
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {maxZoom: 13}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);  
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
<br>
