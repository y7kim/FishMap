<section id="showprofile">
    <div class="container">
        <div class="row itembg">
            <div class="col-lg-12 ">
                <h1 class="section-heading">Angler Profile</h1>
                <h3 class="section-subheading text-info"><%= @profile.name %>'s profile!</h3>
            </div>
        </div>
        <div class="row text-center itembg">
            <div class="col-md-12">
            <form>
                <div class="field">
                  <label class="btn-success disabled">Name:</label><br />
                  <%= @profile.name %>
                </div>
                <div class="field">
                  <label class="btn-success disabled">Birthday:</label><br />
                  <%= @profile.birthday %>
                </div>
                <div class="field">
                  <label class="btn-success disabled">Bio:</label><br />
                  <%= @profile.bio %>
                </div>
                <div class="field">              
                  <label class="btn-success disabled">Home Water:</label><br />
                  <%= @profile.homewater %>
                </div>
                <div class="field">              
                  <label class="btn-success disabled">Twitter:</label><br />
                  <%= @profile.twitter %>
                </div>
            </form>
              <%= link_to 'Back', profiles_path, :class => 'btn btn-primary pull-right' %>
              <%= link_to 'Edit', edit_profile_path(@profile), :class => 'btn btn-primary pull-right' %> 
            </div>
        </div>
    </div>
</section>

